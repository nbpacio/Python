#
show_commands_f5 ()
{
	echo "1. F5 v11.x"
	echo "2. F5 v9 and v10.x"
	echo "3. Exit"
	echo ""
	echo -en "Select F5 version: "
	read F5VERSION
	case "${F5VERSION}" in
        1)
		f5v11x
		;;
	2)
		f5v9n10x
		;;
	3)
		exit
		;;
	*)
		echo "Invalid selection."
		exit
		;;
	esac

}
#
show_commands ()
{
	echo ""
	echo ""
	echo "1. Switch"
	echo "2. Router"
	echo "3. Riverbed Steelhead"
	echo "4. F5"
	echo "5. ASA"
	echo "6. Exit"
	echo ""
	echo -en "Select one from the list above: "
	read SUB_MENU
	case "${SUB_MENU}" in
        1)
		show_commands_switch
		;;
	2)
		show_commands_router
		;;
	3)
		show_commands_rb-sh
		;;
	4)
		show_commands_f5
		;;
	5)
		show_commands_asa
		;;
	6)
		exit
		;;
	*)
		echo "Wrong input. Aborting all actions..."
		exit
		;;
	esac
}
#
final_files ()
{
	for RESULTS in `cat ${INPUT_FILE}`
	do
		cat ${LOG_DIR}/*${RESULTS}* >> ${OUT_DIR}/${RESULTS}.txt
	done
}
email_generic ()
{
	mutt -s "Network CI pre-checks on ${DATE_1} at ${TIME_1}." ${EMAIL_ADDR} -a ${OUT_DIR}/*.txt < /dev/null
}
#
directory_checks
read_email_address
input_file_check
read_credentials
show_commands
final_files
email_generic
#############################################################################
rm -rf ${BASE_DIR}/*.ppck ${BASE_DIR}/logs* ${LOG_DIR} 2> /dev/null
