#! /bin/bash
####################--------------------------------#######################
## Script to perform basic checks on network gears                       ##
## Version 1.3                                                           ##
## Author: Babu V Paramb (bparamb@its.jnj.com)                           ##
## This script can be used to test -                                     ##
## 1. ICMP to the device.                                                ##
## 2. Traceroute                                                         ##
## 3. Run show commands on IOS devices                                   ##
####################--------------------------------#######################
clear
BASE_DIR=$PWD
DATE_1=`date +%Y%b%d`
TIME_1=`date +%H%M%S`
LOG_DIR="${BASE_DIR}/logs_${DATE_1}${TIME_1}"
LOG_FILE="${LOG_DIR}/show_commands_${DATE_1}_${TIME_1}.txt"
DB_FILE="/usr/bin/noc/DB"
NOC_USER=`echo $USER`
OUT_DIR="${LOG_DIR}/results"
SITE_IPS="${BASE_DIR}/.Site_IP_List.ppck"
rm -rf ${BASE_DIR}/*.ppck ${BASE_DIR}/logs* ${LOG_DIR} 2> /dev/null
print_center ()
{
        LENGTH=`echo $1 | wc -m | /bin/awk '{ print $1 }'`
        STR_LEN=`echo ${LENGTH} | /bin/awk '{ print $1/2 }' | cut -f1 -d.`
        WIDTH=`tput cols`
        CENTER=`echo ${WIDTH} | /bin/awk '{ print $1/2 }' | cut -f1 -d.`
        START_PT=`echo ${CENTER} ${STR_LEN} | /bin/awk '{ print $1-$2 }'`
        tput cuf ${START_PT} 2> /dev/null
        echo "${1}" 2> /dev/null
}
#
input_file_check ()
{
echo -en "Do you have input seed file? [Y|N]: "
read INPUT_FILE_ANS
if [ "${INPUT_FILE_ANS}" == "y" ] || [ "${INPUT_FILE_ANS}" == "Y" ]
then
	print_center "--------------------------------------------------------------"
	print_center "Here's the list of files you have in [${PWD}]."
	echo ""
	file * | grep 'ASCII text' 2> /dev/null | /bin/awk -F: '{ print $1 }'
	echo ""
	print_center "If the file is not listed here, please specify the file name with absolute path."
	print_center "--------------------------------------------------------------"
	echo -en "File name: "
	read INPUT_FILE
	FILE_TYPE=`file ${INPUT_FILE} 2> /dev/null | /bin/awk '{ print $2, $3 }'`
	echo "Input file is [ ${INPUT_FILE} ]"
	echo -en "Is this correct? [Y|N]: "
	read ANS_01
	if [ "${ANS_01}" == "y" ] || [ "${ANS_01}" == "Y" ]
	then
		if [ ! -f ${INPUT_FILE} ] || [ "${FILE_TYPE}" != "ASCII text" ]
		then
			echo "${INPUT_FILE} is not a valid file with IP addresses. Please select the correct file."
			exit
		fi
	elif [ "${ANS_01}" == "n" ] || [ "${ANS_01}" == "N" ]
	then
		echo "Aborting all actions..."
		exit
	else
		echo "Wrong choice. Aborting all actions..."
		exit
	fi
elif [ "${INPUT_FILE_ANS}" == "n" ] || [ "${INPUT_FILE_ANS}" == "N" ]
then
	echo -en "You can copy and paste IP Addresses here to create seed file. Do you want to go with that? [Y|N]: "
	read ANS_02
	if [ "${ANS_02}" == "y" ] || [ "${ANS_02}" == "Y" ]
	then
		INPUT_FILE="${BASE_DIR}/User_Input_${DATE_1}_${TIME_1}.ppck"
		> ${INPUT_FILE}
                echo ""
                print_center "----------------------- READ CAREFULLY -----------------------"
		print_center ">> Hit ENTER key first."
                print_center ">> Copy and paste IP addresses line-by-line"
                print_center ">> Hit ENTER key after entering last IP address"
		print_center ">> Press CTRL+D keys to finish."
                print_center "----------------------- READ CAREFULLY -----------------------"
                echo -en "Hit ENTER key to continue... "
                read xx
                cat > ${INPUT_FILE}
		echo ""
		echo "Here's the input data."
		echo "--------------------------------------------------------------"
		cat ${INPUT_FILE}
		echo "--------------------------------------------------------------"
	elif [ "${ANS_02}" == "n" ] || [ "${ANS_02}" == "N" ]
	then
		echo "Create seed file and try again. Aborting all actions..."
		exit
	else
		echo "Wrong choice. Aborting all actions..."
		exit
	fi
else
	echo "Wrong choice. Aborting all actions..."
	exit
fi
}
#
directory_checks ()
{
	if [ -d ${OUT_DIR} ] || [ -d ${LOG_DIR} ]
	then
	        rm -f ${LOG_DIR}/*.log ${LOG_DIR}/*.txt ${OUT_DIR}/*.txt
	else
	        mkdir -p ${OUT_DIR} 2> /dev/null
	fi
	echo "Script started on ${DATE_1} at ${TIME_1}." | tee ${LOG_FILE} || exit
}
#
read_credentials ()
{
	echo -en "User ID (TACACS): "
	read JNJ_TACACS_ID
	echo -en "TACACS Password : "
	read -s JNJ_TACACS_PSWD
}
#
read_email_address ()
{
	EMAIL_ADDR="${USER}@its.jnj.com"
	echo -en "${EMAIL_ADDR} - Is this your email address? [Y|N]: "
	read EMAIL_ADDR_ANS
	if [ "${EMAIL_ADDR_ANS}" == "n" ] || [ "${EMAIL_ADDR_ANS}" == "N" ]
	then
		echo -en "Your email address: "
		read EMAIL_ADDR
		echo "Report will be sent to your email ${EMAIL_ADDR}."
	elif [ "${EMAIL_ADDR_ANS}" == "y" ] || [ "${EMAIL_ADDR_ANS}" == "Y" ]
	then
		echo "Report will be sent to your email ${EMAIL_ADDR}."
	else
		echo "Wrong choice. Aborting all actions..."
		exit
	fi
}
#
detect_loopback ()
{
	for CI_LP in `/bin/awk '{ print $1 }' ${INPUT_FILE}`
	do
		#
		for DUMMY in ${CI_LP}
		do
			/usr/bin/sshpass -p "${JNJ_TACACS_PSWD}" ssh -q -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -l ${JNJ_TACACS_ID} ${DUMMY} 2> /dev/null <<EOF
			sh run
EOF
		done > ${CI_LP}_loopback
#		grep  
	done
}
ping_devices ()
{
	OUTPUT_FILE_PING="${OUT_DIR}/${DATE_1}_${TIME_1}_ping.txt"
	for CI in `/bin/awk '{ print $1 }' ${INPUT_FILE}`
	do
#		OUTPUT_FILE_PING="${LOG_DIR}/${DATE_1}_${TIME_1}_${CI}_ping.txt"
#		echo "------------------- ${CI} Ping -------------------" | tee -a ${OUTPUT_FILE_PING}
		echo -en ${CI} | tee -a ${OUTPUT_FILE_PING}
		ping -l3 -c2 -w1 -q ${CI} > /dev/null 2>&1 && echo -en "\t OK\n" | tee -a ${OUTPUT_FILE_PING} || echo -en "\t FAIL\n" | tee -a ${OUTPUT_FILE_PING}
##			ssh -l ${JNJ_TACACS_ID} ${CI} "ping -l3 -c2 -w1 -q ${N_CIs} > /dev/null 2>&1 && echo -en "\t OK\n" | tee -a ${OUTPUT_FILE_PING} || echo -en "\tFAIL\n" | tee -a ${OUTPUT_FILE_PING}"
	done
}
#
ping_site_id ()
{
	OUTPUT_FILE_PING="${OUT_DIR}/${DATE_1}_${TIME_1}_ping.txt"
	echo -en "Site ID: "
	read SITE_ID
	echo -en "Confirm site ID: ${SITE_ID} [Y|N]: "
	read SITE_ID_ANS
	if [ "${SITE_ID_ANS}" == "y" ] || [ "${SITE_ID_ANS}" == "Y" ]
	then
		echo "---------- Site ID: ${SITE_ID} ----------" | tee -a ${OUTPUT_FILE_PING}
		/bin/awk -F\| '{ print $1, $2, $3, $9 }' ${DB_FILE} | grep 'Deployed' | grep -i ${SITE_ID} > ${SITE_IPS}
		IP_LISTS=`grep -i ${SITE_ID} ${SITE_IPS} | grep -i 'Deployed' | wc -l | /bin/awk '{ print $1 }'`
		if [ ${IP_LISTS} -gt 0 ]
		then
			cat ${SITE_IPS} | while read line
			do
				echo -en ${line} | /bin/awk '{ print $2, $3 }' | /usr/bin/tr -d "\n" | tee -a ${OUTPUT_FILE_PING}
				SITE_CIs=`echo ${line} | /bin/awk '{ print $3 }'`
				ping -l3 -c2 -w1 -q ${SITE_CIs} > /dev/null 2>&1 && echo -en "\t OK\n" | tee -a ${OUTPUT_FILE_PING} || echo -en "\t FAIL\n" | tee -a ${OUTPUT_FILE_PING}
			done
		else
			echo "No devices found for site ID ${SITE_ID}."
			exit
		fi
	elif [ "${SITE_ID_ANS}" == "n" ] || [ "${SITE_ID_ANS}" == "N" ]
	then
		echo "Aborting all actions.."
		exit
	else
		echo "Aborting all actions.."
		exit
	fi
}
#
traceroute_devices ()
{
	OUTPUT_FILE_TRACEROUTE="${OUT_DIR}/${DATE_1}_${TIME_1}_traceroute.txt"
	for CI in `/bin/awk '{ print $1 }' ${INPUT_FILE}`
	do
		echo "" | tee -a ${OUTPUT_FILE_TRACEROUTE}
		echo "------------------- ${CI} Traceroute -------------------" | tee -a ${OUTPUT_FILE_TRACEROUTE}
		traceroute -n -w 1 ${CI} 2> /dev/null | tee -a ${OUTPUT_FILE_TRACEROUTE}
	done
}
#
snmp_walk ()
{
	OUTPUT_FILE_SNMPWALK="${OUT_DIR}/${DATE_1}_${TIME_1}_snmpwalk.txt"
	> ${OUTPUT_FILE_SNMPWALK}
	SNMP_SYS_DESC=""
	SNMP_STR="4JJSIandVZ D3CeF3qa led221aq"
	echo "------------------- ${CI} SNMPWalk -------------------" | tee -a ${OUTPUT_FILE_SNMPWALK}
	for CI in `/bin/awk '{ print $1 }' ${INPUT_FILE}`
	do
	        for STRS in `echo ${SNMP_STR}`
	        do
	                MASK_STR1=`echo "${STRS}" | cut -c1-3`
			echo "SNMP String = ${MASK_STR1}********"
	                SNMP_RES=`snmpwalk -v2c -c ${STRS} ${CI} system | grep 'sysDescr.' | awk -F= '{ print $2 }'`
	                if [ "${SNMP_RES}" != "" ]
	                then
	                        echo "${CI}		OK" | tee -a ${OUTPUT_FILE_SNMPWALK}
	                        break
	                fi
	        done
        if [ "${SNMP_RES}" == "" ]
        then
                echo "${CI}		FAIL" | tee -a ${OUTPUT_FILE_SNMPWALK}
        fi
	done
}
#
show_commands_switch ()
{
	for CIS in `/bin/awk '{ print $1 }' ${INPUT_FILE}`
	do
		OUTPUT_FILE_SHOCOMM="${LOG_DIR}/${DATE_1}_${TIME_1}_${CIS}_show_commands.txt"
		for CI in ${CIS}
		do
		echo "------------------- ${CI} Show Commands -------------------" | tee -a ${LOG_FILE}
		/usr/bin/sshpass -p "${JNJ_TACACS_PSWD}" ssh -q -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -l ${JNJ_TACACS_ID} ${CI} 2> /dev/null <<EOF
		term len 0
		show clock
		show run
		show version
		show hardware
		show inventory
		show module
		show processes cpu history
		show environment all
		show power inline
		show ip interface brief
		show interface status
		show interface trunk
		show cdp neighbors
		show ip eigrp neighbors
		show access-lists
		show snmp
		show ntp status
		show standby brief
		show vtp status
		show vlan
		show mac address-table
		show ip route summary
		show logging
		term len 30
		exit
EOF
		done | tee -a ${OUTPUT_FILE_SHOCOMM}
	done
}
#
show_commands_router ()
{
	for CIS in `/bin/awk '{ print $1 }' ${INPUT_FILE}`
	do
		OUTPUT_FILE_SHOCOMM="${LOG_DIR}/${DATE_1}_${TIME_1}_${CIS}_show_commands.txt"
		for CI in ${CIS}
		do
		echo "------------------- ${CI} Show Commands -------------------" | tee -a ${LOG_FILE}
		/usr/bin/sshpass -p "${JNJ_TACACS_PSWD}" ssh -q -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -l ${JNJ_TACACS_ID} ${CI} 2> /dev/null <<EOF
		term len 0
		show clock
		show version
		sh flash
		show run
		show proc cpu 
		sh ip int brief
		show int desc
		show ip bgp summary
		show ip eigrp neighbors
		show ip route
		sh policy-map interface 
		sh policy-map interface input
		sh policy-map interface output
		show policy-map interface | i drop
		show snmp
		show arp
		show tech-support
		term len 30
		exit
EOF
		done | tee -a ${OUTPUT_FILE_SHOCOMM}
	done
}
